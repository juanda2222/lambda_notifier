{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}